
@{
    ViewBag.Title = "Xem thông tin điểm danh chi tiết";
    Layout = "~/Views/Shared/_LayoutTemp.cshtml";
}

@section Heads
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
}

<div class="row area-control">
    <div class="col-sm-12">
        <div class="form-inline">
            <div class="form-group">
                <select class="form-control selectpicker" id="cboHocPhan" name="cboHocPhan" data-value="" data-live-search="true">
                    <option value="-1" selected="selected">-- Chọn học phần --</option>
                    @foreach (var item in ViewBag.danhsachHP)
                    {
                        <option value="@item.idTKB">@item.TenHP</option>
                    }
                </select>
            </div>
            <button type="button" class="btn btn-primary" id="btnSearch" onclick="Search();" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Đang xử lý"><i class="fa fa-search"></i>Tìm kiếm</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-blue">
            <div class="panel-heading">
                Thông tin điểm danh
            </div>

            <table width="100%" class="table table-striped table-bordered table-hover" id="tblContent">
                <thead>
                    <tr>
                        <th>MSSV</th>
                        <th>Lớp</th>
                        <th>Học phòng</th>
                        <th>Ngày học</th>
                    </tr>
                </thead>
                <tbody id="tblContentRow">
                    <tr><td colspan="12" class="table-content-null">Hiện không có nội dung</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>
    <script src="~/Scripts/customscript/student/infodiemdanh/InfoDiemDanhSVScript.js"></script>
}
