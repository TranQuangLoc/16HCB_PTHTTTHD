                <tr>
                    <td>@item.masv</td>
                    <td>@item.tensv</td>
                    <td>@item.hocki</td>
                    <td>@item.namhoc</td>
                    <td>

                        @*@Html.ActionLink("Gửi", "TraPhieuDiem", "PhieuDiem", new object[] { new { id = item.masv }, new { mamh = 5 } }, null)*@
                        @*<a href="" onclick="Traphieudiem(event, '@data','@item.masv')">Gửi</a>*@
                        <a href="TraPhieuDiem?masv=@item.masv&hocki=@item.hocki&magv=@SessionProvider.GetUserIdFromSession()">Gửi</a>
                        @*<a href="TraPhieuDiem/1/5">Gửi</a>*@
                    </td>
